[MESSAGES CONTROL]
disable =
    bad-continuation,
    fixme,
    invalid-name,
    locally-disabled,
    no-self-use,
    redefined-variable-type,
    similarities,
    too-few-public-methods,
    too-many-branches,
    too-many-locals,
    too-many-statements,

[BASIC]
bad-functions = filter, input

[REPORTS]
reports = no
msg-template = {C}: {path}:{line}: {symbol} [{obj}] {msg}

[FORMAT]
max-line-length = 120
expected-line-ending-format = LF

